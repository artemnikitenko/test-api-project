{% extends 'base.html.twig' %}

{% block body %}
    <h1>Classes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Date</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for class in classes %}
            <tr>
                <td><a href="{{ path('class_show', { 'id': class.id }) }}">{{ class.id }}</a></td>
                <td>{{ class.name }}</td>
                <td>{% if class.createdAt %}{{ class.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ class.active }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('class_show', { 'id': class.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('class_edit', { 'id': class.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('class_new') }}">Create a new class</a>
        </li>
    </ul>
{% endblock %}
