{% extends 'base.html.twig' %}

{% block body %}
    <h1>Class</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ class.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ class.name }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if class.createdAt %}{{ class.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ class.active }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('class_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('class_edit', { 'id': class.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
